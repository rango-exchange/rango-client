{
  "name": "@rango-dev/signer-terra",
  "version": "0.1.12",
  "license": "MIT",
  "module": "dist/signer-terra.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "tsdx watch",
    "build": "tsdx build  --tsconfig ./tsconfig.json",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/signer-cosmos.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/signer-cosmos.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@terra-money/terra.js": "^3.1.7",
    "long": "^5.2.1",
    "rango-types": "^0.1.28"
  },
  "publishConfig": {
    "access": "public"
  }
}
