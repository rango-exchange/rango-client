{
  "name": "@rango-dev/queue-manager-core",
  "version": "0.1.10",
  "license": "MIT",
  "module": "dist/queue-manager-core.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "tsdx watch",
    "build": "tsdx build  --tsconfig ./tsconfig.json",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/queue-manager-core.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/queue-manager-core.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@types/uuid": "^8.3.4"
  },
  "dependencies": {
    "idb": "^7.1.1",
    "uuid": "^9.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
