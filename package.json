{
  "name": "rango-client",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "widget/*",
    "queue-manager/*",
    "wallets/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build:wallets": "lerna run --concurrency 5 --scope @rango-dev/wallets-* --scope @rango-dev/provider-* --ignore @rango-dev/wallets-demo build",
    "build:queue-manager": "lerna run --scope @rango-dev/queue-manager-* --ignore @rango-dev/queue-manager-demo build",
    "build:widget": "lerna run --scope @rango-dev/widget-* build",
    "build:npm": "node ./scripts/publish.js; yarn build:wallets && yarn build:queue-manager && yarn build:widget",
    "build:demo": "lerna run --scope @rango-dev/wallets-demo build",
    "build": "nx affected --target=build --parallel=3",
    "dev:wallets": "lerna run dev --scope @rango-dev/wallets-demo --scope @rango-dev/provider-*",
    "dev:queue-manager": "lerna run dev --scope @rango-dev/queue-manager-*",
    "dev:ui": "lerna run storybook --scope @rango-dev/ui",
    "dev:embedded": "lerna run dev --scope @rango-dev/widget-embedded --scope @rango-dev/ui",
    "dev:wallet-adapter": "lerna run dev --scope @rango-dev/wallet-adapter-*",
    "lint": "lerna run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "publish": "lerna publish"
  },
  "dependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "husky": "^8.0.3",
    "size-limit": "^8.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "buffer": "^5.5.0",
    "lerna": "^6.1.0",
    "path-browserify": "^1.0.0",
    "prettier": "^2.7.1",
    "punycode": "^1.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.3"
  }
}
