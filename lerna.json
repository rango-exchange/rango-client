{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "useNx": true,
  "version": "independent",
  "command": {
    "version": {
      "conventionalCommits": true,
      "preid": "next",
      "message": "chore(release): publish"
    }
  },
  "ignoreChanges": [
    "**/CHANGELOG.md",
    "**/node_modules/**",
    "**/package.json",
    "**/*.md"
  ]
}
